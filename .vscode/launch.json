{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "name": "Debug build script",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/build.mjs",
            "cwd": "${workspaceFolder}",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "chrome",
            "name": "Debug website (Chrome)",
            "request": "launch",
            "preLaunchTask": "Run realtime debug services",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}